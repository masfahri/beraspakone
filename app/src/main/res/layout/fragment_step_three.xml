<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_step_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rontikeky.beraspakone.konfirmasi.stepTwo">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblKonfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="KONFIRMASI PEMBELIAN" />

        <TextView
            android:id="@+id/langkah"
            style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblKonfirmasi"
            android:gravity="center"
            android:text="Langkah 2 dari 3" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAtm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>




</RelativeLayout>
