<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="REGISTER"
            android:textSize="16dp"
            android:gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutNamaDepan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel"
            android:textColorHint="@color/bluePrimary"
            android:textStyle="bold">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txt_FirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Depan"
                app:met_textColorHint="@color/bluePrimary"
                android:background="@drawable/rounded_edittext"
                android:drawablePadding="20dp"
                android:inputType="textEmailAddress"
                app:met_floatingLabel="@color/bluePrimary"
                app:met_underlineColor="@color/bluePrimary"
                app:met_errorColor="@color/danger"
                app:met_baseColor="@color/bluePrimary"
                app:met_primaryColor="@color/bluePrimary" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel"
            android:textColorHint="@color/bluePrimary"
            android:textStyle="bold">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txt_LastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Belakang"
                app:met_textColorHint="@color/bluePrimary"
                android:background="@drawable/rounded_edittext"
                android:drawablePadding="20dp"
                android:inputType="textEmailAddress"
                app:met_floatingLabel="@color/bluePrimary"
                app:met_underlineColor="@color/bluePrimary"
                app:met_errorColor="@color/danger"
                app:met_baseColor="@color/bluePrimary"
                app:met_primaryColor="@color/bluePrimary" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel"
            android:textColorHint="@color/bluePrimary"
            android:textStyle="bold">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:met_textColorHint="@color/bluePrimary"
                android:background="@drawable/rounded_edittext"
                android:drawablePadding="20dp"
                android:inputType="textEmailAddress"
                app:met_floatingLabel="@color/bluePrimary"
                app:met_underlineColor="@color/bluePrimary"
                app:met_errorColor="@color/danger"
                app:met_baseColor="@color/bluePrimary"
                app:met_primaryColor="@color/bluePrimary" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel"
            android:textColorHint="@color/bluePrimary"
            android:textStyle="bold">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:met_textColorHint="@color/bluePrimary"
                android:background="@drawable/rounded_edittext"
                android:drawablePadding="20dp"
                android:inputType="textPassword"
                app:met_floatingLabel="@color/bluePrimary"
                app:met_underlineColor="@color/bluePrimary"
                app:met_errorColor="@color/danger"
                app:met_baseColor="@color/bluePrimary"
                app:met_primaryColor="@color/bluePrimary" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/viewSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#fff"
            android:background="@drawable/rounded_view_success"
            android:text="Sukses Regist"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_btn_login"
            android:textColor="#fff"
            android:text="Register"
            android:textStyle="bold" />



    </LinearLayout>

</RelativeLayout>